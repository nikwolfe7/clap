<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.clap"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.clap.ApplicationState" >
        <activity
            android:name="com.clap.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.clap.MainMenuActivity" ></activity>
        <activity android:name="com.clap.AboutActivity" ></activity>
        <activity android:name="com.clap.HelpActivity" ></activity>
        <activity android:name="com.clap.CountriesListActivity" ></activity>
        <activity android:name="com.clap.LanguageListActivity" ></activity>
        <activity android:name="com.clap.LessonListActivity" ></activity>
        <activity android:name="com.clap.LessonDialogActivity" ></activity>
        <activity android:name="com.clap.StudyActivity" ></activity>
        <activity android:name="com.clap.PlayActivity" ></activity>
    </application>

</manifest>