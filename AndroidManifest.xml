<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.languageproject"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".ApplicationState" >
        <activity
            android:name="com.example.languageproject.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.languageproject.MainMenu" ></activity>
        <activity android:name="com.example.languageproject.CountriesList" ></activity>
        <activity android:name="com.example.languageproject.LanguageList" ></activity>
        <activity android:name="com.example.languageproject.LessonList" ></activity>
        <activity
            android:name="com.example.languageproject.PlayAudio"
            android:label="@string/title_activity_play_audio" >
        </activity>
    </application>

</manifest>