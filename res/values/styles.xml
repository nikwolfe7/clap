<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/default_background</item>
    </style>

    <style name="DefaultDialogStyle" parent="@android:style/Theme.Dialog" >
        <item name="android:background">@color/default_dialog_background</item>
    </style>
    
    <style name="DefaultPreferenceStyle">
        <item name="android:windowBackground">@color/default_background</item>
    </style>

    <style name="DefaultListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:windowBackground">@color/default_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:cacheColorHint">@color/default_background</item>
        <item name="android:textColor">@color/default_text_color</item>
    </style>

    <style name="DefaultTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
 		<item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DefaultLinearLayoutStyle">
        <item name="android:background">@color/default_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="DefaultButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_width">175dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:layout_marginTop">20dip</item>
    </style>

</resources>